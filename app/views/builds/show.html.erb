<div class="page-header">
  <h1><%= link_to @build, build_path(@repository, @build) %> <%= state_label(@build) %></h1>
</div>

<div class="alert alert-<%= bs_context(@build) %>" role="alert">
  <%= @build.description %>
</div>

<dl class="dl-horizontal">
  <dt>Repository</dt>
  <dd><%= link_to @repository, @repository %></dd>

  <dt>Pull Request</dt>
  <dd><%= link_to_pull_request @build %></dd>

  <dt>Author</dt>
  <dd><%= link_to_author @build %></dd>

  <dt>Commit</dt>
  <dd><%= link_to_sha @build %></dd>

  <dt>Created at</dt>
  <dd><%= time_tag @build.created_at %></dd>
</dl>

<% if @violations.present? %>
  <div class="panel panel-primary">
    <div class="panel-heading">Violations</div>

    <table class="table">
      <% @violations.each do |violation| %>
        <tr>
          <td><%= link_to_line violation %></td>
          <td><%= violation.message %></td>
        </tr>
      <% end %>
    </table>
  </div>
<% end%>

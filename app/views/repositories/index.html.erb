<div class="page-header">
  <h1>Repositories</h1>
</div>

<table class="table table-bordered table-striped">
  <% @repositories.each do |repo| %>
    <tr data-repo="<%= repo.name %>">
      <td><%= repo.name %></td>
      <td><%= link_to 'Disable', repo, method: :delete, class: 'btn btn-default' %></td>
    </tr>
  <% end %>
</table>

<%= link_to 'Add repository', new_repository_path, class: 'btn btn-primary btn-lg' %>

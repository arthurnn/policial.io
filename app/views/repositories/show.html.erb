<div class="page-header">
  <h1><%= link_to @repository, @repository %></h1>
</div>

<table class="table table-bordered table-striped">
  <thead>
    <tr>
      <th>#</th>
      <th>Pull request</th>
      <th>Author</th>
      <th>State</th>
    </tr>
  </thead>

  <tbody>
    <% @builds.each do |build| %>
      <tr>
        <td><%= link_to build, build_path(@repository, build) %></td>
        <td><%= build.pull_request %></td>
        <td><%= build.user %></td>
        <td><%= state_label(build) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'Disable', @repository, method: :delete,
  confirm: 'Are you sure you want to disable this repository?', class: 'pull-right' %>
